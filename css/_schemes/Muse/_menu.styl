.site-nav {
  +mobile() {
    position: absolute;
    left: 0;
    top: 52px;
    margin: 0;
    width: 24%;
    padding: 0;
    background: $black-deep;
  }
}

.menu {
  +mobile() { text-align: center; }
}
.menu .menu-item {
  +mobile() {
    display: block;
    margin: 0 10px;
    vertical-align: top;
  }

  br {
    +mobile() { display: none; }
  }

  a {
    +mobile() { padding: 5px 10px; }
  }
  .fa { margin-right: 0; }
}
